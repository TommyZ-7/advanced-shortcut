{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Advanced Shortcut",
  "version": "0.1.0",
  "identifier": "com.tommyz7.advanced-shortcut",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Advanced Shortcut",
        "width": 1100,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA5MTM0QzQxM0UzNDc4M0EKUldRNmVEUStRVXdUQ1lpSDZUUnZ1Q25UaXVJRVRIbHo3TVZYYklRdnlacEFGQURKQ3lMMmprWFMK",
      "endpoints": [
        "https://github.com/TommyZ-7/advanced-shortcut/releases/latest/download/latest.json"
      ]
    }
  }
}
